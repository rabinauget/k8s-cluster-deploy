Vagrant.configure("2") do |config|
  config.vm.box = "debian/bookworm64"
    config.vm.provider "virtualbox" do |vb|
      vb.memory = "512"
      vb.cpus = 1
    end

  config.vm.define "controlplane" do |controlplane|
    controlplane.vm.hostname = "controlplane"
    controlplane.vm.network "private_network",
      ip: "10.0.2.15",
      netmask: "255.255.255.0",
      virtualbox__intnet: "NatNetwork"
    controlplane.vm.network "forwarded_port", 
      guest: 22,
      host: 2222
  end

  config.vm.define "worker1" do |worker1|
    worker1.vm.network "private_network",
      ip: "10.0.2.16",
      netmask: "255.255.255.0",
      virtualbox__intnet: "NatNetwork"
        worker1.vm.network "forwarded_port", 
      guest: 22,
      host: 2223
  end

  config.vm.define "worker2" do |worker2|
    worker2.vm.network "private_network",
      ip: "10.0.2.17",
      netmask: "255.255.255.0",
      virtualbox__intnet: "NatNetwork"
    worker2.vm.network "forwarded_port", 
      guest: 22,
      host: 2224
  end

  config.vm.define "worker3" do |worker3|
    worker3.vm.network "private_network",
      ip: "10.0.2.17",
      netmask: "255.255.255.0",
      virtualbox__intnet: "NatNetwork"
    worker3.vm.network "forwarded_port", 
      guest: 22,
      host: 2225
  end

end